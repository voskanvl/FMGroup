
mixin slider(name="")
  -

    let style = `
      height: 400px; 
    `
    if (name) 
      name = "slider-" + name 
    else 
      name = ""
      
  div(class="slider "+name)
    .slider__wrapper
        .slider__items
            block
            //- each i in [0,1,2,3]
            //-     .slider__item
            //-         div.main-slider(style=style)
    a.slider__control.slider__control_prev(href="#" role="button" data-slide="prev" style="display:none;")
    a.slider__control.slider__control_next(href="#" role="button" data-slide="next" style="display:none;")