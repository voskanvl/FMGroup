.carousel
    each i in arr
        a.carousel-item(href="#")
            .carousel-item__wrapper
                img(src=i.img)
            each point in i.points
                svg(class="carousel-item__point-svg" width=100 height=100 viewBox=`0 0 100 100` fill="none" xmlns="http://www.w3.org/2000/svg" style={top:0+'px', left: 0+'px'})
                    line(x1=0 y1=0 x2=100 y2=100 stroke="white" stroke-width="2" stroke-linecap="round")
                .carousel-item__point.carousel-item__point_1(style={top: point.top+'px', left: point.left+'px'})
                    .carousel-item__inner
                        .carousel-item__sign +
                .carousel-item__point-data(style={top:point.text.top+'px',left:point.text.left+'px'}) 
                    .carousel-item__point-text= point.text.text